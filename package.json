{
  "author": "",
  "ava": {
    "files": [ "test/**/*Tests.js" ],
    "timeout": "10m"
  },
  "dependencies": { },
  "description": "Node Version Switcher",
  "devDependencies": {
    "@types/node": "^13.11.0",
    "ava": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "nyc": "^15.1.0",
    "rewire": "^2.5.2",
    "typescript": "^3.7.2"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "script"
    },
    "plugins": [ "standard", "promise" ],
    "rules": {
      "comma-dangle": [ "error", "always-multiline" ],
      "indent": [ "error", "tab", {
        "SwitchCase": 1
      } ],
      "no-multi-spaces": [ "error", {
        "ignoreEOLComments": true
      } ],
      "no-tabs": "off",
      "no-var": "error",
      "semi": [ "error", "always" ],
      "space-before-function-paren": [ "error", {
        "anonymous": "always",
        "named": "never"
      } ],
      "strict": [ "error", "global" ]
    }
  },
  "license": "MIT",
  "main": "lib/index.js",
  "name": "nvs",
  "nyc": {
    "include": [ "lib/**" ],
    "reporter": [ "text", "html" ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jasongin/nvs"
  },
  "scripts": {
    "coverage": "nyc --all ava --serial test/modules/*",
    "lint": "eslint lib test",
    "test": "ava --verbose --serial test/modules/* test/cli/*",
    "test-cli": "ava --verbose --serial test/cli/*",
    "test-modules": "ava --verbose --serial test/modules/*",
    "ts-check": "tsc"
  },
  "version": "1.6.2"
}